<!-- header -->
<%- include('../partial/header.ejs') %>

<body>
<div class="wrapper">
    <!-- sidebar -->
    <%- include('../partial/left-menu.ejs') %>
    <div class="main">
        <!-- nav-bar -->
        <%- include('../partial/nav-bar.ejs') %>
        <main class="content">
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-12 col-xl-12">
                        <h1 class="section-title">ARTICLE DETAIL</h1>
                        <div class="card">
                            <div class="card-body">
                                <div class="mb-3 justify-content-center">
                                    <h2><%= item.name %></h2>
                                </div>
                                <div class="mb-3 row">
                                    <div class="col-lg-8">
                                        <h3 style="font-style: italic;font-size: medium; color: darkblue"><%= item.category.name %></h3>
                                    </div>
                                    <div class="col-lg-4 text-right">
                                        <h3 style="font-style: italic;font-size: medium; color: darkblue"><%= moment(item.createAt).format('DD MMMM YYYY') %></h3>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <img class="img-thumbnail w-25" src="<%= item.thumnail %>" alt="">
                                </div>
                                <div class="mb-3">
                                    <div class="row">
                                        <%- item.articleDetail%>
                                    </div>
                                </div>
                                <form action="#" method="post">
                                    <div>
                                        <a href="/admin/article/edit?id=<%= item._id %>&categoryId=<%= item.category._id%>">
                                            <button type="button" class="btn btn-primary">Edit</button>
                                        </a>
                                        <a href="/admin/article">
                                            <button type="button" class="btn btn-dark float-right">Back to list</button>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- footer -->
        <%- include('../partial/footer.ejs') %>
    </div>
</div>
<!-- js -->
<%- include('../partial/js.ejs') %>
</body>

</html>