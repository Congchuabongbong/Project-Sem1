<!-- header -->
<%-include('../partial/header.ejs')%>
<body>
<div class="wrapper">
    <!-- sidebar -->
    <%-include('../partial/left-menu.ejs')%>
    <div class="main">
        <!-- nav-bar -->
        <%-include('../partial/nav-bar.ejs')%>
        <main class="content">
            <div class="container-fluid p-0">
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <div class="card">
                            <div class="card-header">
                                <h3>Create category</h3>
                            </div>
                            <div class="card-body">
                                <form action="/admin/categories/create" method="post">
                                    <div class="mb-3 row">
                                        <label class="col-form-label col-sm-3 text-sm-right">Name</label>
                                        <div class="col-sm-9">
                                            <input name="name" type="text" class="form-control" placeholder="Name">
                                            <span class="text-danger"><%= typeof errors !== "undefined" && errors.name ? errors.name.message : ''%></span>
                                        </div>
                                    </div>
                                    <div class="mb-3 row">
                                        <label class="col-form-label col-sm-3 text-sm-right">Description</label>
                                        <div class="col-sm-9">
                                            <textarea name="description" class="form-control" placeholder="Description" rows="3"><%= typeof item !== "undefined" ? item.description : ''%></textarea>
                                            <span class="text-danger"><%= typeof errors !== "undefined" && errors.description ? errors.description.message : ''%></span>
                                        </div>
                                    </div>
                                    <div class="mb-4 row">
                                        <div class="col-sm-9 ml-sm-auto">
                                            <button type="submit" class="btn btn-primary mr-1">Submit</button>
                                            <button type="reset" class="btn btn-danger float-right">Reset</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- footer -->
        <%-include('../partial/footer.ejs')%>
    </div>
</div>
<!-- js -->
<%-include('../partial/js.ejs')%>
</body>

</html>